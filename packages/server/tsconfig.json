{
  "compilerOptions": {
    "noErrorTruncation": true,

    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    
    "strict": true,
    "noEmit": true,
    
    "types": ["bun-types"]
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
